;
; BIND data file for local loopback interface
;
$TTL    604800
@       IN      SOA     local.cloud. root.localhost. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      ns.local.cloud.
ns      IN      A       172.16.0.2
foreman IN      CNAME   ns

